<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NotificationItem">
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NotificationText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NotificationTime">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="ThemeOverlay.App.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="dialogCornerRadius">16dp</item>
        <item name="colorSurface">@color/gray</item>
    </style>

    <style name="CustomDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>